# Copy to backend/.env and set values. Never commit .env (CWE-798).
# Required; app fails to start if any are missing.
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
APP_SECRET=                            # Min 16 chars; use a long random string
DATABASE_URL=postgresql://user:pass@localhost:5432/spotify_playlist
BASE_URL=http://localhost:8000          # Public base URL of this app (for OAuth redirects)

# Optional
ALLOWED_ORIGINS=http://localhost:3000   # Comma-separated CORS origins
APP_NAME=Spotify Playlist Manager
DEBUG=false
ENVIRONMENT=development
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60
LOG_LEVEL=INFO
JSON_LOGS=false
# AUTH_SUCCESS_REDIRECT=http://localhost:3000/   # Optional; must be in ALLOWED_ORIGINS
